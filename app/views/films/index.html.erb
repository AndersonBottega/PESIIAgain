<center><h1>Listing films</h1></center>

<center><table border="1">
  <thead>
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Classification</h3></th>
      <th><h3>Quality</h3></th>
      <th><h3>Year</h3></th>
      <th><h3>Options</h3></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.Title %></td>
        <td><%= film.Classification %></td>
        <td><%= film.Quality %></td>
        <td><%= film.year %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= button_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></center>

